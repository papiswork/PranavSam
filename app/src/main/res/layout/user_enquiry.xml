<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="16dp"
        android:elevation="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Enquiry"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="12dp"
            android:gravity="center" />

        <!-- Quantity Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Quantity Type:"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_pieces"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pieces"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/rb_kgs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kgs"
                tools:ignore="TouchTargetSizeCheck" />
        </RadioGroup>

        <EditText
            android:id="@+id/et_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Quantity"
            android:inputType="number"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Wall Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Wall Type:"
            android:textStyle="bold"
            android:paddingTop="12dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Single Wall"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Double Wall"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Triple Wall"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9 Wall"
                tools:ignore="TouchTargetSizeCheck" />
        </RadioGroup>

        <!-- Requirement Type Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Requirement Type:"
            android:textStyle="bold"
            android:paddingTop="12dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Annually"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quarterly"
                tools:ignore="TouchTargetSizeCheck" />
        </RadioGroup>

        <!-- Confirm Button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0D47A1"

            android:marginTop="16dp"
            android:text="Confirm"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
