<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F0F0F0"
    android:padding="16dp"
    android:id="@+id/main"
    tools:context=".AdminActivity">

    <!-- Add User Section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="User Icon"
            android:src="@drawable/userlogo" />

        <Button
            android:id="@+id/btnUser"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#082F54"
            android:text="Add User"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Announcements Section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="Announcements Icon"
            android:src="@drawable/announcements" />

        <Button
            android:id="@+id/btnAnnounce"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#082F54"
            android:text="Announcements"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Attendance Section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/attendance"
            android:contentDescription="Attendance Icon"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnAttendance"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#082F54"
            android:text="Attendance"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Tasks Section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="Tasks Icon"
            app:srcCompat="@drawable/emp" />

        <Button
            android:id="@+id/btnTasks"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#082F54"
            android:text="Tasks"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
